<div class="start-game">
  <label for="start" style="user-select: none">
    <div>Forest</div>
    <div>Jump</div>
  </label>
  <input id="start" type="checkbox" />
  <div class="_decor">
    <img src="/assets/forest-bg.png" alt="" />
  </div>
</div>

<style>
  .start-game {
    grid-area: start;
    align-self: center;
    justify-self: center;
    color: #fff;

    &:has(:checked) {
      display: none;
    }

    input {
      position: fixed;
      left: -99999px;
    }

    label {
      display: inline-block;
      padding: 1rem;
      transform: scaleY(1.5);
      font-size: 10vmax;
      line-height: 1;
      text-align: center;
      cursor: pointer;
      transition: scale 0.25s;

      &:hover {
        scale: 1.03;
      }

      :nth-child(2) {
        translate: -6vmax -5vmax;
      }
    }

    ._decor {
      position: absolute;
      right: 0;
      bottom: 0;
      max-width: 30vw;
    }
  }
</style>

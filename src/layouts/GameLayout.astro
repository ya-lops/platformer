  <style>
    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
    }
  </style>
</html>

<style is:global>
  @import "../styles/animations.css";

  .wrap {
    --background-time: 15s;
    --pos: calc(100vh - 1080px + 360px);

    position: relative;
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    grid-template-rows: 1fr 30vh;
    grid-template-areas: "score start reset" "b-left b-center b-right";
    height: 100vh;
    width: 100vw;
    overflow: hidden;
  }

  @view-transition {
    navigation: auto;
  }
</style>
